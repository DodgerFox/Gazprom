// about-description
.about-description
	padding-top 40px
	+to-width(560px)
		padding-top 20px
	
	&__body
		margin-top 23px
		padding-top 40px
		border-top 1px solid #e0e5ed
		+to-width(560px)
			padding-top 20px
		
	&__text
		font-size 15px
		padding-bottom 30px
		line-height 25px
		&-main
			font-size 21px
			line-height 30px
			font-weight 300
			padding-bottom 30px
			+to-width(767px)
				font-size 17px
				line-height 25px
	
	&__wrap
		padding-bottom 40px
		padding-right 150px
		position relative
		+to-width(1024px)
			padding-right 0
		+to-width(767px)
			padding-bottom 5px
	
	&__image
		width 945px
		height 425px
		background-position center
		background-size cover
		+to-width(1000px)
			width 100%
			height 326px
		+to-width(767px)
			height 342px
			width auto
			margin-right -10px
			margin-left -10px
		+to-width(560px)
			height 145px
	
	&__signature
		line-height 35px
		font-size 21px
		font-weight 300
		color white
		padding 35px 35px 45px 45px
		background-color #d12f2b
		max-width 494px
		position absolute
		top 220px
		right 0
		+to-width(1024px)
			right -20px
		+to-width(1000px)
			top 190px
		+to-width(767px)
			position relative
			top -15px
			width 100%
			max-width 100%
			right 0px
			font-size 15px
			line-height 25px
			padding 20px 20px 30px 20px

// about-description end