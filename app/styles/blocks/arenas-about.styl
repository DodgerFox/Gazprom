.arenas-about
	padding 60px 0
	+to-width(767px)
		padding-top 40px
		padding-bottom 40px
		
	&__image
		width 100%
		height 480px
		background-color #f0f0f0
		background-size cover
		background-position center
		+to-width(960px)
			height 282px
		+to-width(767px)
			width initial
			margin-left -10px
			margin-right -10px
		+to-width(460px)
			height 185px
		+to-width(380px)
			height 125px
	
	&__headering
		padding-top 40px
	
	&-description
		display flex
		justify-content space-between
		+to-width(1023px)
			flex-direction column
		
		&__right
			margin-left 45px
			+to-width(1023px)
				margin-left 0
			+to-width(767px)
				margin-left -10px
				margin-right -10px

		&__left
			max-width 800px

		&__text
			margin-top 30px
			font-size 15px
			line-height 1.67
			+to-width(767px)
				margin-top 20px
	
	&-contacts
		margin-top 30px
		padding 25px 30px
		background-color #f8f8f8
		width 280px
		+to-width(767px)
			width 100%
		
		&__item
			padding-bottom 24px
			font-size 11px
			line-height 1.36
		
		&__title
			font-family bold
			color #1e1e1e
			text-transform uppercase
			padding-bottom 6px
		
		&__link
			color #13b5ea
			font-family semibold
			letter-spacing 0.5px
			cursor pointer
			opacity 1
			t()
			&:hover
				opacity 0.7
		
		&__text
			font-size 13px
			line-height 1.54
			color #1e1e1e
		
		&__more
			display flex
			align-items center
			
			&-text
				font-family semibold
				letter-spacing 0.5px
				text-transform uppercase
				line-height 1.82
				font-size 11px
				color #6a6a6a
				margin-right 8px
				
			&-icon
				transform translateX(0px)
				transition transform 0.3s
			
			&:hover
				.arenas-about-contacts__more-icon
					transform translateX(5px)