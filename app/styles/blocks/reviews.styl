//reviews
.reviews
	padding-top 35px
	+to-width(767px)
		padding-top 20px
	
	&__header
		padding-bottom 20px
		display flex
		justify-content space-between
	
	&-buttons
		display flex
		
		&__item
			margin-right 37px
			display flex
			align-items center
			position relative
			opacity 1
			cursor pointer
			t()
			&:hover
				opacity 0.7
			&:last-child
				transform rotate(180deg)
				margin-top 1px
				margin-right 0
				&:before
					content ''
					position absolute
					left 30px
					width 2px
					height 100%
					background-color #e0e5ed
	
	&-items
		background-color #f7f7f7
		height 112px
		overflow hidden
		+to-width(767px)
			height 74px
		&__wrap
			display flex
			align-items flex-end
			height 100%
			width 100%
			min-width 1290px
				
		&__item
			width 10%
			height 100%
			background-position bottom center
			background-repeat no-repeat
			opacity 0.26
			cursor pointer
			t()
			+to-width(767px)
				max-width 56px
				max-height 60px
				background-size cover
				margin-right 6px
			&:hover
				opacity 1
			&_active
				opacity 1
	
	&__slider
		height 562px
		+to-width(767px)
			height auto
		
	&-slide
		background-size cover
		background-position center
		position relative
		height 100%
		&:before
			content ''
			left 0
			top 0
			right 0
			bottom 0
			background-color rgba(0, 0, 0, .65)
			position absolute
		
		&__container
			display flex
			height 100%
			padding 0 80px
			+to-width(1024px)
				padding 0 30px
			+to-width(767px)
				flex-direction column-reverse
			
		&__image
			height 100%
			display flex
			justify-content center
			align-items flex-end
			img
				+to-width(767px)
					max-width 160px
		
		&__wrap
			padding-left 50px
			padding-top 120px
			color white
			+to-width(1100px)
				padding-left 0
			+to-width(1024px)
				margin-left -50px
			+to-width(767px)
				margin-left 0
				text-align center
				padding 0 35px
				padding-top 26px
		
		&__title
			padding-bottom 20px
			font-size 15px
			line-height 20px
			font-weight 600
			+to-width(767px)
				font-size 13px
				line-height 20px
				padding-bottom 10px
		
		&__quote
			font-size 19px
			line-height 30px
			font-weight 300
			font-style italic
			padding-bottom 30px
			+to-width(1024px)
				font-size 17px
				line-height 25px
			+to-width(767px)
				font-size 15px
				line-height 20px
				padding-bottom 20px
		
		&__name
			font-size 14px
			line-height 15px
			padding-bottom 5px
			text-transform uppercase
			font-weight 700
			+to-width(767px)
				font-size 12px
				line-height 15px
				padding-bottom 5px
		
		&__status
			font-size 13px
			line-height 15px
			padding-bottom 15px
			color #999
			+to-width(767px)
				font-size 11px
				line-height 15px
		
		&-pagination
			height 100%
			width 100%
			display flex
			justify-content space-between
			align-items center
			position absolute
			left 0
			top 0
			pointer-events none
			
			&__item
				cursor pointer
				pointer-events all
				t()
				img
					+to-width(767px)
						max-width 30px
						
				&_disable
					pointer-events none
					opacity 0
				&:last-child
					transform rotate(180deg)					
				&:hover
					opacity 0.7
					

//end reviews