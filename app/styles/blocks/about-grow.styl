// about-grow
.about-grow
	padding-top 90px
	padding-bottom 115px
	+to-width(1024px)
		padding-top 60px
	+to-width(1024px)
		padding-bottom 140px
	+to-width(560px)
		padding-bottom 100px
	
	&__wrap
		display flex
		flex-direction column
		align-items center
	
	&__headering
		text-align center
		padding-bottom 25px
		line-height 40px
	
	&__text
		font-size 15px
		line-height 25px
		text-align center
		padding-bottom 40px
		+to-width(560px)
			padding-bottom 30px
	
	&__button
		padding 10px 20px
		background-color #ee3522
		line-height 20px
		text-transform uppercase
		letter-spacing 0.5px
		color white
		font-size 11px
		+to-width(767px)
			position absolute
			left 10px
			right 10px
			text-align center
			bottom -88px
		+to-width(560px)
			bottom -40px
	
	&__items
		padding 0 10px
		padding-top 110px
		display flex
		justify-content space-between
		max-width 920px
		margin 0 auto
		+to-width(1024px)
			max-width 100%
			margin-left -12px
		+to-width(767px)
			padding-top 20px
		+to-width(560px)
			flex-wrap wrap
			margin-left 0
	
	&-item
		+to-width(1024px)
			margin-right -12px
		+to-width(560px)
			margin-right 0
			padding-bottom 50px
			width 33.333%
		&__image
			box-shadow 0px 0px 15px 1px rgba(171, 171, 171, 0.5)
			transform rotate(90deg)
			width 136px
			margin 0 auto
			display block
			+to-width(767px)
				width 90px
				
		&__title
			text-align center
			font-size 11px
			text-transform uppercase
			line-height 15px
			font-weight 700
			padding-bottom 2px
			margin-top 36px
			+to-width(560px)
				margin-top 30px
		
		&__text
			text-align center
			font-size 13px
			line-height 20px
			color #999999

// about-grow end