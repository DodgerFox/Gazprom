// about-info
.about-info
	+to-width(1024px)
		padding-bottom 60px
	&__box
		z-index 2
	&:after
		content ''
		position absolute
		left 0
		top 0
		right 0px
		bottom 0px
		background-color rgba(19,23,25,0.3)
	&__headering
		margin-top 30px
		color white
		font-weight 300
		text-align center
		
	&__facts
		display flex
		justify-content space-between
		color white
		padding-top 10px
		margin-top 40px
		border-top 1px solid rgba(255, 255, 255, .4)
		+to-width(767px)
			display none
	
	&-fact
		display flex
		padding-right 40px
		&:last-child
			padding-right 0
		
		&__title
			margin-right 15px
			font-size 35px
			line-height 45px
			font-weight 300
		
		&__text
			font-size 13px
			font-weight 300
			line-height 20px

// about-info end