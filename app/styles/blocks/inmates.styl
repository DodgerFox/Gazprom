// inmates
.inmates
	padding-top 40px
	padding-bottom 30px
	+to-width(767px)
		padding-top 20px
	
	&__body
		margin-top 24px
		border-top 1px solid #f0f0f0
		padding-top 40px
		+to-width(767px)
			margin-top 15px
			padding-top 30px
	
	&__text
		font-size 15px
		line-height 25px
		padding-bottom 30px
	
	&-item
		width 100%
		margin-top 20px
		margin-bottom 20px
		background-color #333
		background-size cover
		background-position center
		position relative
		display flex
		color white
		height 380px
		+to-width(767px)
			flex-direction column-reverse
			margin-left -20px
			margin-right -20px
			padding 0 30px
			width initial
			height auto
		&:before
			content ''
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			background-color rgba(39, 39, 39, .85)
		&:first-child
			margin-top 0
			
		&__image
			position relative
			bottom -15px
			margin 0 auto
			display block
			width 90%
			img
				margin 0 auto
				display block
				+to-width(1024px)
					width 100%
			&-wrap
				width 50%
				position relative
				display flex
				justify-content center
				align-items flex-end
				overflow hidden
				z-index 2
				+to-width(767px)
					width 100%
			
		&__wrap
			width 50%
			padding-left 80px
			padding-top 40px
			position relative
			z-index 2
			+to-width(1024px)
				padding-left 10px
			+to-width(767px)
				padding-top 30px
				width 100%
		
		&__title
			font-size 35px
			font-weight 300
			line-height 45px
			padding-bottom 30px
			+to-width(560px)
				font-size 25px
				line-height 30px
				padding-bottom 20px
		
		&__table
			width 350px
			+to-width(767px)
				width 100%
				max-width 350px
			tr
				border-top 1px solid rgba(255, 255, 255, .2)
				&:last-child
					border-bottom 1px solid rgba(255, 255, 255, .2)
				
				td
					font-size 13px
					line-height 30px
					
					&:first-child
						color rgba(255, 255, 255, .5)
	
	&-button
		padding 10px 45px
		background-color #f0f0f0
		color #6a6a6a
		text-transform uppercase
		font-size 11px
		font-weight 600
		line-height 20px
		letter-spacing 0.5px
		t()
		&:hover
			background-color #e6e6e6
		&__wrap
			width 100%
			margin-top 60px
			display flex
			justify-content center

.achievements
	margin-top 20px
	&-item
		display flex
		
		&__text
			margin-left 10px
			font-size 13px
			line-height 25px

// inmates end