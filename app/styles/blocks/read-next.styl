.read-next
	padding-top 90px
	padding-bottom 100px
	+to-width(1300px)
		padding-bottom 50px
	
	&__headering
		text-align center
	
	&__body
		display flex
		flex-wrap wrap
		margin-left -25px
		margin-right -25px
		+to-width(1300px)
			margin-left -1px
			margin-right -1px
			padding-top 25px
	
	&-item
		width 50%
		color white
		+to-width(767px)
			width 100%
		&__wrap
			margin 25px
			height 350px
			text-align center
			background-color #eaeaea
			padding 0 30px
			padding-top 90px
			position relative
			background-position center
			background-size cover
			margin 26px 1px
			+to-width(1300px)
				margin 1px
			+to-width(767px)
				height 260px
				padding-top 40px
			&:before
				content ''
				position absolute
				top 0px
				left 0px
				right 0px
				bottom 0px
				background-color rgba(25, 25, 25, .5)
		
		&__title
			padding-bottom 15px
			font-size 30px
			font-weight 300
			position relative
			+to-width(767px)
				font-size 21px
				font-weight 600
		
		&__text
			line-height 25px
			font-size 15px
			font-weight 300
			padding-bottom 25px
			position relative
			max-width 410px
			margin 0 auto
			+to-width(767px)
				font-size 13px
		
		&__button
			width 150px
			padding 10px
			text-transform uppercase
			background-color #ee3522
			font-size 11px
			letter-spacing 0.5
			line-height 20px
			position relative
			margin 0 auto
			opacity 1
			cursor pointer
			t()
			&:hover
				opacity 0.7
			+to-width(767px)
				width 100%