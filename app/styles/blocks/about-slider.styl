// about-slider

.about-slider
	height 536px
	border-top 1px solid white
	background-color #0081c6
	background-size cover
	background-position center
	position relative
	+to-width(767px)
		height initial
		padding-bottom 160px
	
	.slick-list
		padding 0!important
	&-slide
		width 100%
		height 536px
		+to-width(767px)
			height 100%
		&__container
			display flex
			height 100%
		
		&__image
			position absolute
			right 0px
			bottom 0
			+to-width(1024px)
				&.image-adavtivefix
					right -100px
			+to-width(767px)
				display none!important
			
		&__wrap
			width 60%
			padding-top 90px
			position relative
			z-index 2
			+to-width(767px)
				padding-top 60px
				width 100%

		&__title
			color white
			font-weight 300
			line-height 45px
			font-size 35px
			padding-bottom 40px
			+to-width(767px)
				font-size 25px
				line-height 30px
		
		&__quote
			font-size 21px
			font-weight 300
			font-style italic
			line-height 30px
			color white
			padding-bottom 30px
			position relative
			&:before
				content ''
				position absolute
				width 139px
				height 122px
				background-image url('../images/svg/quotations.svg')
				top 0
				right 0
			+to-width(767px)
				font-size 17px
				line-height 25px
		
		&__name
			font-size 14px
			font-weight 700
			line-height 15px
			color white
			text-transform uppercase
			padding-bottom 10px
		
		&__status
			font-size 15px
			line-height 15px
			color rgba(255, 255, 255, .7)
		
		&__person
			padding-bottom 40px
			+to-width(767px)
				padding-bottom 0
		
	&-pagination
		display flex
		position absolute
		bottom 70px
		left 0
		right 0
		
		&__wrap
			display flex
			
		&__item
			margin-right 25px
			width 70px
			height 70px
			border-radius 50%
			background-color #333333
			border 2px solid transparent
			cursor pointer
			background-size contain
			background-repeat no-repeat
			background-position center
			t()
			
			&:hover
				border 2px solid white
			
			&_active
				border 2px solid white
			
			+to-width(767px)
				width 60px
				height 60px
				margin-right 15px

// about-slider end