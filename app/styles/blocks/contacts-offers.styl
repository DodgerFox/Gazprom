.section-offers
	padding-bottom 120px
	+to-width(767px)
		padding-bottom 0
	
	&__box
		overflow hidden

	&__wrap
		display flex
		flex-wrap wrap
		margin-left -20px
		margin-right -20px
		+to-width(1280px)
			margin-left -10px
			margin-right -10px
		+to-width(767px)
			margin-left -20px
			margin-right -20px

	&__item
		padding 0 20px
		width 50%
		+to-width(1280px)
			width 100%
			padding 0 10px
			padding-bottom 20px
		+to-width(767px)
			padding-bottom 3px
			&:last-child
				padding-bottom 0
	
	&__container
		background-size cover
		background-position center
		padding 40px
		padding-bottom 20px
		height 275px
		width 100%
		position relative
		overflow hidden
		+to-width(425px)
			padding 30px 20px 35px 20px
			height 235px
	
	&__title
		font-size 21px
		font-family light
		color #1e1e1e
		line-height 1.43
		padding-bottom 15px
		+to-width(767px)
			text-align center
	
	&__text
		font-size 13px
		line-height 1.54
		color #1e1e1e
		padding-bottom 25px
		max-width 300px
		+to-width(1280px)
			max-width 400px
		+to-width(767px)
			text-align center
			max-width initial
	
	&__button
		width 150px
		height 40px
		background-color #ee3522
		display flex
		justify-content center
		align-items center
		font-size 11px
		font-family semibold
		color white
		letter-spacing 0.5px
		text-transform uppercase
		cursor pointer
		t()
		&:hover
			background-color #de2e1c
		+to-width(767px)
			position initial
			width 100%
	
	&__image
		position absolute
		right 40px
		bottom 0px
		+to-width(767px)
			display none