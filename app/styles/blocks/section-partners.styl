.partners
	padding-top 40px
	padding-bottom 80px
	+to-width(767px)
		padding-bottom 30px
	
	&__headering
		padding-bottom 23px
	
	&__string
		padding-top 60px
		padding-bottom 40px
		border-top 1px solid #e0e5ed
		display flex
		justify-content space-around
		+to-width(767px)
			flex-direction column
			align-items center
			padding-top 30px
			padding-bottom 0px
		&_small
			.partners-item__image
				+to-width(1023px)
					max-width 160px
	&-item
		display flex
		flex-direction column
		align-items center
		justify-content flex-end	
		width 50%
		+to-width(767px)
			padding-bottom 30px
			padding-top 10px
			width 100%
		
		&__image
			+to-width(1023px)
				max-width 232px
				max-height 106px
		&__title
			margin-top 30px
			padding-bottom 13px
			color #1e1e1e
			font-size 17px
			line-height 25px
			text-align center
			font-weight 600
		
		&__subtitle
			color #13b5ea
			font-size 12px
			text-transform uppercase
			font-weight 700