.team-header
	width 100%
	padding-top 50px
	display flex
	flex-direction column
	justify-content space-between
	background-color #132D3E
	background-position center
	background-size cover
	+to-width(767px)
		padding-top 20px
	
	&-back
		display flex
		align-items center
		
		&__icon
			width 19px
			height 9px
			background-image url('../images/svg/icon_arrow-blue.svg')
			background-repeat no-repeat
			background-position center
			transition transform 0.3s
		
		&__text
			text-transform uppercase
			font-family semibold
			font-size 11px
			letter-spacing 0.5px
			color #13b5ea
			margin-left 8px
			
		&:hover
			.team-header-back__icon
				transform translateX(-5px)
	
	&-logo
		margin-top 35px
		padding-bottom 25px
		display flex
		align-items center
		+to-width(767px)
			flex-direction column
			align-items flex-start
			padding-bottom 15px
			margin-top 15px
		
		&__logo
			margin-right 30px
			img
				+to-width(767px)
					max-width 70px
			
		&__title
			font-size 35px
			font-family semibold
			color white
			padding-bottom 3px
			+to-width(767px)
				font-size 25px
				font-family light
		
		&__text
			font-size 15px
			line-height 1.67
			color white
			+to-width(767px)
				font-size 13px
				line-height 1.54
	
	&-items
		position relative
		border-top solid 1px rgba(255, 255, 255, .2)
		padding-top 15px
		padding-bottom 22px
		
		&__box
			display flex
			+to-width(786px)
				flex-wrap wrap
		
		&__item
			margin-right 60px
			+to-width(786px)
				margin-right 25px
				padding-bottom 20px
			&:last-child
				margin-right 0
			
		&__text
			padding-bottom 5px
			font-size 9px
			font-family semibold
			color white
			opacity 0.5
			line-height 1.11
			text-transform uppercase
		
		&__title
			font-size 19px
			font-family semibold
			line-height 1.32
			color white
			+to-width(786px)
				font-size 15px
		
		&__link
			display flex
			align-items center
			t()
			svg
				margin-left 6px
			
			&:hover
				opacity 0.7