.team-places
	padding-bottom 60px
	t()
	
	&__wrap
		padding-top 20px
		margin-left -10px
		margin-right -10px
		display flex
		flex-wrap wrap
	
	&-item
		text-align center
		padding 10px
		width 10%
		display flex
		align-items flex-end
		justify-content center
		+to-width(1023px)
			width 16.666%
		+to-width(639px)
			width 33.333%
		&__wrap
			padding-bottom 7px
			display flex
			flex-direction column
			justify-content flex-end
	
	&-date
		margin-top 8px
		padding-bottom 5px
		font-size 13px
		line-height 1.15
		color #999999
	
	&-title
		font-size 15px
		line-height 1.33
		color #1e1e1e
		font-family semibold
	
	&-text
		color #1e1e1e
		line-height 1.36
		font-size 11px
		