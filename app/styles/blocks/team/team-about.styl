.team-about
	padding-top 30px
	padding-bottom 60px
	&__box
		display flex
		justify-content space-between
	
	&__left
		width 100%
		max-width 882px
		+to-width(1023px)
			max-width initial
		+to-width(767px)
			width initial
			margin-left -10px
			margin-right -10px
	
	&__right
		display flex
		justify-content center
		align-items flex-start
		width 30%
		+to-width(1280px)
			justify-content flex-end
			padding-left 30px
		+to-width(1023px)
			position absolute
			right 20px
			top 470px
			width 280px
		+to-width(767px)
			width initial
			padding-left 0
			left 0px
			right 0px
			top 440px
		+to-width(640px)
			top 345px
		+to-width(580px)
			top 245px
		
	&__image
		height 513px
		width 100%
		background-color #f0f0f0
		background-size cover
		background-position center
		+to-width(1280px)
			height 440px
		+to-width(640px)
			height 345px
		+to-width(580px)
			height 245px
	
	&-description
		display flex
		flex-wrap wrap
		+to-width(1023px)
			padding-right 280px
		+to-width(767px)
			padding-top 377px
			padding-right 0
			padding-left 20px
		&__item
			width 50%
			margin-top 30px
			padding-right 40px
			+to-width(1023px)
				width 100%
		
		&__title
			font-size 15px
			line-height 1.33
			font-family semibold
			padding-bottom 5px
		
		&__text
			font-size 13px
			line-height 1.54

	&-support
		width 280px
		background-color #f8f8f8
		padding 20px
		+to-width(767px)
			width 100%
		&__title
			color #1e1e1e
			font-size 19px
			font-family semibold
			line-height 25px
			padding-bottom 10px
		
		&__text
			color #1e1e1e
			font-size 13px
			line-height 20px
			padding-bottom 15px
		
		&__item
			display flex
			align-items center
			border-top solid 1px #e6e6e6
			justify-content space-between
			font-size 13px
			height 40px
			&:last-child
				border-bottom solid 1px #e6e6e6
			
			&_active
				font-family bold
		
		&__wrap
			display flex
			align-items center
		
		&__number
			font-size 13px
			margin-right 10px
		
		&__logo
			margin-right 10px
		
		&__button
			margin-top 20px
			height 40px
			color white
			letter-spacing 0.5px
			font-size 11px
			text-transform uppercase
			background-color #ee3522
			display flex
			justify-content center
			align-items center
			cursor pointer
			t()
			&:hover
				opacity 0.8