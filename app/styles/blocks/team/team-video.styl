.team-videos
	padding-bottom 120px
	+to-width(992px)
		padding-bottom 70px
	&__header
		display flex
		justify-content space-between
		align-items flex-end
	
	&__wrap
		margin-left -10px
		margin-right -10px
		padding-top 25px
		display flex
		flex-wrap wrap
		+to-width(640px)
			margin-right -5px
			margin-left -5px
	
	&-item
		width 25%
		padding 0 10px
		+to-width(992px)
			width 50%
			padding-bottom 30px
		+to-width(640px)
			padding 0 5px
			padding-bottom 30px
		
		&__icon
			img
				+to-width(475px)
					width 30px
		
		&__image
			background-color #f0f0f0
			background-size cover
			background-position center
			display flex
			justify-content center
			align-items center
			width 100%
			height 166px
			position relative
			+to-width(475px)
				height 82px
		
		&__wrap
			position absolute
			display flex
			justify-content space-between
			bottom 10px
			left 10px
			right 10px
			+to-width(475px)
				display none
		
		&__count
			display flex


		&__time
			border-radius 2px
			background-color rgba(0, 0, 0, .7)
			display flex
			justify-content center
			align-items center
			width 40px
			height 20px
			padding-bottom 1px
			font-size 11px
			color white
		
		&__date
			margin-top 5px
			line-height 1.15
			font-size 13px
			color #999999
		
		&__title
			margin-top 10px
			min-height 40px
			line-height 1.54
			color #1e1e1e
			font-size 13px
			font-family semibold
			display block
		
		&__tag
			border-radius 2px
			height 20px
			padding 0 5px
			font-size 10px
			font-family bold
			color white
			text-transform uppercase
			display flex
			justify-content center
			align-items center
			&_blue
				background-color #13b5ea
			&_red
				background-color #ee3522
	
	&__button-more
		+to-width(992px)
			display none
		
		&-mobile
			width 100%
			display none
			+to-width(992px)
				display flex